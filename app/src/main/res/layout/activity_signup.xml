<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"

        tools:context=".view.SignUpActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen20dp"
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:textStyle="bold|italic"
                android:background="@color/blue"
                android:textSize="@dimen/dimen35sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimen24dp"
                android:paddingEnd="@dimen/dimen24dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:text="@string/sign_up"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen30sp"
                android:textStyle="bold" />



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginBottom="@dimen/dimen8dp"
                android:hint="@string/name"
                android:paddingLeft="@dimen/dimen24dp"
                android:paddingRight="@dimen/dimen24dp">

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_border"
                    android:inputType="textPersonName"
                    android:padding="@dimen/dimen5dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8dp"
                android:layout_marginBottom="@dimen/dimen8dp"
                android:hint="@string/email"
                android:paddingLeft="@dimen/dimen24dp"
                android:paddingRight="@dimen/dimen24dp">

                <EditText
                    android:id="@+id/userEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_border"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/dimen5dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8dp"
                android:layout_marginBottom="@dimen/dimen8dp"
                android:hint="@string/contact"
                android:paddingLeft="@dimen/dimen24dp"
                android:paddingRight="@dimen/dimen24dp">

                <EditText
                    android:id="@+id/userContact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_border"
                    android:inputType="phone"
                    android:padding="@dimen/dimen5dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8dp"
                android:layout_marginBottom="@dimen/dimen8dp"
                android:hint="@string/password"
                android:paddingLeft="@dimen/dimen24dp"
                android:paddingRight="@dimen/dimen24dp"
                app:passwordToggleContentDescription="Enter Your Password"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/userPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="@dimen/dimen5dp"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8dp"
                android:layout_marginBottom="@dimen/dimen8dp"
                android:hint="@string/confirm_password"
                android:paddingLeft="@dimen/dimen24dp"
                android:paddingRight="@dimen/dimen24dp"
                app:passwordToggleContentDescription="Confirm Your Password"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/userConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="@dimen/dimen5dp"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen24dp"
                android:drawableStart="@drawable/ic_info"
                android:drawablePadding="@dimen/dimen10dp"
                android:paddingLeft="@dimen/dimen24dp"
                android:paddingRight="@dimen/dimen24dp"
                android:text="@string/eight_characters"
                android:textColor="#B2000000"
                 />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen24dp"
                android:layout_marginRight="@dimen/dimen24dp"
                android:layout_marginBottom="@dimen/dimen24dp"
                android:background="@drawable/custom_button_border2"
                android:padding="@dimen/dimen12dp"
                android:text="@string/create_your_account"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/dimen18sp" />

            <TextView
                android:id="@+id/textViewLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen24dp"
                android:gravity="center"
                android:textSize="@dimen/dimen16sp"
                android:text="@string/sign_in_already_a_customer" />
        </LinearLayout>
    </ScrollView>
</layout>