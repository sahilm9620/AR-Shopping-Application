<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".view.ShippingAddressActivity">

        <TextView
            android:id="@+id/AddAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
           android:gravity="center"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@drawable/custom_edittext_border"
            android:layout_marginBottom="@dimen/dimen20dp"
            android:text="Add a new address"
            android:textColor="@color/darkBlue"
            android:textSize="20sp"

            app:layout_constraintBottom_toTopOf="@+id/deliverHere"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />




            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittext_border"
                android:layout_margin="10dp"
                app:hintTextAppearance="@style/MyHintStyle"
                android:hint="@string/full_name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen10dp"
                android:paddingEnd="@dimen/dimen10dp"
                android:singleLine="true"
                />









        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edittext_border"
            android:hint="@string/street_address"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:singleLine="true"
             />




        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edittext_border"
            android:hint="@string/city"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:singleLine="true"
           />



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edittext_border"
            android:hint="@string/country"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:singleLine="true"
            />





        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/zip"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edittext_border"
            android:hint="@string/zip"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="6"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:singleLine="true"
            />




           <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen8dp"
                            android:layout_marginBottom="@dimen/dimen8dp"

                            >
         <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10">

             <com.hbb20.CountryCodePicker
                 android:id="@+id/ccp"
                 android:layout_width="82dp"
                 android:layout_height="40dp"
                 android:layout_gravity="center"
                 android:layout_marginLeft="7dp"
                 android:layout_weight="1"
                 android:background="@drawable/custom_edittext_border"
                 android:gravity="center_vertical"
                 app:ccp_autoDetectCountry="true"
                 app:ccp_showNameCode="true"
                 app:ccp_textSize="@dimen/dimen16sp"

                 />


             <EditText
                 android:id="@+id/phone"
                 android:layout_width="282dp"
                 android:layout_height="40dp"
                 android:layout_margin="10dp"
                 android:layout_weight="8"
                 android:background="@drawable/custom_edittext_border"
                 android:digits="1234567890"
                 android:hint="@string/contact_number"
                 android:inputType="phone"
                 android:maxLength="10"
                 android:padding="@dimen/dimen5dp"
                 android:paddingStart="@dimen/dimen10dp"
                 android:paddingEnd="@dimen/dimen10dp" />


                            </TableRow>


                        </TableLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of address"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:textColor="@color/vDarkGray"
            android:layout_marginTop="@dimen/dimen5dp"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8dp"
            android:layout_marginBottom="@dimen/dimen8dp"

            >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">



                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen5dp"
                    android:layout_marginLeft="@dimen/dimen15dp"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:layout_marginRight="@dimen/dimen5dp"
                    android:background="@drawable/custom_edittext_border"
                    android:drawableLeft="@drawable/ic_baseline_home_24"
                    android:gravity="center"
                    android:padding="@dimen/dimen5dp"
                    android:text="HOME" />


                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen5dp"
                    android:layout_marginLeft="@dimen/dimen20dp"
                    android:layout_marginTop="@dimen/dimen20dp"

                    android:background="@drawable/custom_edittext_border"
                    android:drawableLeft="@drawable/ic_baseline_apartment_24"
                    android:gravity="center"
                    android:padding="@dimen/dimen5dp"
                    android:text="WORK" />

        </TableRow>
        </TableLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10dp"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginRight="@dimen/dimen10dp"
            android:layout_marginBottom="@dimen/dimen10dp"
             android:background="#FA6604"
            android:text="Save Address"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen18sp" />
    </LinearLayout>
</layout>