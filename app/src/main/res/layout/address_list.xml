<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/address_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"

                />


            <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/dimen20dp"
                  android:layout_marginRight="@dimen/dimen20dp"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="13dp"
                    android:ellipsize="end"
                    android:maxLines="1"

                    android:text="Sahil Mulla"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            <TextView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               android:layout_marginLeft="@dimen/dimen20dp"
                android:layout_marginTop="4dp"
                android:background="#EAE6E6"
                android:gravity="center"
                android:text="HOME"
                android:padding="2dp"
                android:textSize="10sp"
                android:textColor="#676565" />



            <Button
                android:id="@+id/button"
                android:layout_width="@dimen/dimen70dp"
                android:layout_marginTop="13dp"
                android:textColor="@color/darkBlue"
               android:layout_marginLeft="90dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:text="Edit" />


        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="35dp">
                <TextView
                    android:id="@+id/txvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:background="@color/white"

                    android:layout_marginLeft="@dimen/dimen35dp"
                    android:layout_marginRight="@dimen/dimen35dp"
                    android:maxLines="2"
                    android:textColor="@color/dark"
                    tools:text="2088 B Kazi Colony Raviwar Peth " />

                <TextView
                    android:id="@+id/txvAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:background="@color/white"

                    android:layout_marginLeft="@dimen/dimen35dp"
                    android:layout_marginRight="@dimen/dimen35dp"
                    android:maxLines="2"
                    android:textColor="@color/dark"
                    tools:text="Wai Satara Pin- 412803" />

                <TextView
                    android:id="@+id/phoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/dimen30dp"
                    android:layout_marginLeft="@dimen/dimen35dp"
                    android:layout_marginRight="@dimen/dimen35dp"
                    android:maxLines="2"
                    android:textColor="@color/dark"
                    tools:text="9604078826" />

</LinearLayout>
            </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
