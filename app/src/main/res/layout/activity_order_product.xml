<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.OrderProductActivity">

    <androidx.appcompat.widget.AppCompatTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ORDER SUMMARY"
    android:textSize="@dimen/dimen20dp"
    android:layout_marginTop="@dimen/dimen15dp"
    android:layout_marginBottom="@dimen/dimen15dp"
    android:layout_marginLeft="@dimen/dimen10dp"
    />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            card_view:cardCornerRadius="@dimen/dimen10dp"
            card_view:cardElevation="@dimen/dimen5dp"
            card_view:cardUseCompatPadding="true"
            card_view:elevation="@dimen/dimen1dp">
            <LinearLayout
                android:id="@+id/LuserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen10dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/name"
                android:textColor="@color/black"
                />

                <TextView
                    android:id="@+id/txtUserPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:layout_marginBottom="@dimen/dimen15dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/contact"
                    android:textColor="@color/black"
                     />

            <TextView
                android:id="@+id/txtUserAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen10dp"

                android:layout_marginBottom="@dimen/dimen15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/address"
                android:textColor="@color/black"
                 />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen24dp"
                    android:layout_marginLeft="@dimen/dimen5dp"
                    android:layout_marginRight="@dimen/dimen5dp"
                android:background="@drawable/custom_border"
                    android:paddingBottom="@dimen/dimen5dp"
                    android:paddingTop="@dimen/dimen5dp"
                    android:drawablePadding="@dimen/dimen10dp"
                    android:paddingLeft="@dimen/dimen24dp"
                    android:paddingRight="@dimen/dimen24dp"

                    android:text="Please Check if the address is suitable for collecting delivery"
                    android:textColor="#B2000000"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_change_add"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen35dp"
                    android:layout_marginBottom="@dimen/dimen25sp"
                    android:background="@drawable/custom_button_border2"
                    android:layout_marginLeft="@dimen/dimen5dp"
                    android:layout_marginRight="@dimen/dimen5dp"

                    android:text="Change or Add Address"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                   />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            card_view:cardCornerRadius="@dimen/dimen10dp"
            card_view:cardElevation="@dimen/dimen5dp"
            card_view:cardUseCompatPadding="true"
            card_view:elevation="@dimen/dimen1dp">


            <LinearLayout
                android:id="@+id/productItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProductImage"
                    android:layout_width="@dimen/dimen140dp"
                    android:layout_height="@dimen/dimen150dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimen10dp"
                    android:contentDescription="@string/product_image"
                    android:src="@drawable/samsung_galaxy_a70" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen20dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/samsung_galaxy_a70"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen20dp"
                        android:text="@string/_5399_rs"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/freeShipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen20dp"
                        android:text="FREE Shipping"
                        android:drawableStart="@drawable/ic_check_green"
                        android:drawablePadding="@dimen/dimen5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen16sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginTop="@dimen/dimen20dp"
            android:layout_marginRight="@dimen/dimen10dp"
            android:layout_marginBottom="@dimen/dimen10dp"
            android:background="@drawable/custom_button_border2"
            android:text="Make a Payment"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/dimen18sp" />
    </LinearLayout>
</layout>